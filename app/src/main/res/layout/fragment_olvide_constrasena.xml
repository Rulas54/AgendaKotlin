<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".OlvideConstrasenaFragment"
                                                   android:id="@+id/frameLayout2">
    <EditText
            android:layout_width="341dp"
            android:layout_height="46dp"
            android:hint="Confirmar Constraseña"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_apply_passwd"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txt_newpasswd"/>
    <EditText
            android:layout_width="341dp"
            android:layout_height="46dp"
            android:hint="Nueva Constraseña"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_newpasswd"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/txt_email"/>
    <EditText
            android:layout_width="341dp"
            android:layout_height="46dp"
            android:inputType="text"
            android:hint="@string/prompt_email"
            android:ems="10"
            android:id="@+id/txt_email"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="31dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:text="@string/Aplicar_Passwd"
            android:layout_width="214dp"
            android:layout_height="62dp" android:id="@+id/button_aceptar_passwd"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/txt_apply_passwd"/>
    <TextView
            android:text="Olvide Contraseña"
            android:layout_width="290dp"
            android:layout_height="0dp" android:id="@+id/textView2"
            android:textColor="@color/baby_blue" android:textAllCaps="true" android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"
            android:layout_marginStart="4dp" app:layout_constraintStart_toEndOf="@+id/imageView2"/>
    <ImageView
            android:src="@drawable/lock"
            android:layout_width="69dp"
            android:layout_height="47dp" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_email"/>
</androidx.constraintlayout.widget.ConstraintLayout>