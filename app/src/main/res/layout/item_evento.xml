<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_item_container"
        android:padding="16dp"> <TextView
        android:id="@+id/txtTituloLabel"
        android:text="Título:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Reunión de Planificación"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/txtTituloLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/txtTituloLabel"
            app:layout_constraintBottom_toBottomOf="@+id/txtTituloLabel" />

    <TextView
            android:id="@+id/txtDescripcionLabel"
            android:text="Descripción:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloLabel" />

    <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Discutir los hitos del proyecto y asignar tareas."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/txtDescripcionLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/txtDescripcionLabel"
            app:layout_constraintBottom_toBottomOf="@+id/txtDescripcionLabel" />

    <TextView
            android:id="@+id/txtFechaInicioLabel"
            android:text="Inicio:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcionLabel" />

    <TextView
            android:id="@+id/lblFechaInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="26/10/2023 10:00 AM"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toEndOf="@+id/txtFechaInicioLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/txtFechaInicioLabel"
            app:layout_constraintBottom_toBottomOf="@+id/txtFechaInicioLabel" />

    <TextView
            android:id="@+id/txtFechaFinLabel"
            android:text="Fin:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaInicioLabel" />

    <TextView
            android:id="@+id/lblFechaFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="26/10/2023 11:00 AM"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toEndOf="@+id/txtFechaFinLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/txtFechaFinLabel"
            app:layout_constraintBottom_toBottomOf="@+id/txtFechaFinLabel" />

    <TextView
            android:id="@+id/txtUbicacionLabel"
            android:text="Ubicación:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaFinLabel" />

    <TextView
            android:id="@+id/lblUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Sala de Juntas B"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/txtUbicacionLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/txtUbicacionLabel"
            app:layout_constraintBottom_toBottomOf="@+id/txtUbicacionLabel" />

    <Button
            android:id="@+id/btnEditarEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            app:backgroundTint="@color/baby_blue"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:layout_marginStart="128dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUbicacionLabel"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEditarEvento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>