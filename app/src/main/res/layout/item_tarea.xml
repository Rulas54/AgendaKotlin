<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:padding="16dp">

    <!-- Nombre -->
    <TextView
            android:id="@+id/txtNombre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/lblNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Nombre de tarea"
            app:layout_constraintTop_toTopOf="@+id/txtNombre2"
            app:layout_constraintStart_toEndOf="@+id/txtNombre2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

    <!-- Prioridad -->
    <TextView
            android:id="@+id/txtPrioridad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad:"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/lblPrioridad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="1"
            app:layout_constraintTop_toTopOf="@+id/txtPrioridad2"
            app:layout_constraintStart_toEndOf="@+id/txtPrioridad2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

    <!-- Descripción -->
    <TextView
            android:id="@+id/txtDescripcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            app:layout_constraintTop_toBottomOf="@+id/txtPrioridad2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Descripción detallada de la tarea"
            app:layout_constraintTop_toTopOf="@+id/txtDescripcion2"
            app:layout_constraintStart_toEndOf="@+id/txtDescripcion2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

    <!-- Fecha de Vencimiento -->
    <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/lblFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="2025-06-01"
            app:layout_constraintTop_toTopOf="@+id/tvFechaSeleccionada"
            app:layout_constraintStart_toEndOf="@+id/tvFechaSeleccionada"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

    <!-- Estado (Spinner) -->
    <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaSeleccionada"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <Spinner
            android:id="@+id/spEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/txtEstado"
            app:layout_constraintStart_toEndOf="@+id/txtEstado"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
    />

    <!-- Etiqueta (Spinner) -->
    <TextView
            android:id="@+id/txtEtiqueta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etiqueta:"
            app:layout_constraintTop_toBottomOf="@+id/txtEstado"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <Spinner
            android:id="@+id/spEtiqueta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/txtEtiqueta"
            app:layout_constraintStart_toEndOf="@+id/txtEtiqueta"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

    <Button
            android:id="@+id/btnHecho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hecho"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/spEtiqueta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="126dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
